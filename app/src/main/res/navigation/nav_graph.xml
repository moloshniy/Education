        tools:layout="@layout/fragment_fragment0" />
    <fragment
        android:id="@+id/fragment1_2"
        android:name="com.example.education.Fragment1_2"
        android:label="fragment_fragment1_2"
        tools:layout="@layout/fragment_fragment1_2" >
        <action
            android:id="@+id/action_fragment1_2_to_fragment1_3"
            app:destination="@id/fragment1_3" />
    </fragment>
    <fragment
        android:id="@+id/fragment1_3"
        android:name="com.example.education.Fragment1_3"
        android:label="Fragment1_3" />
